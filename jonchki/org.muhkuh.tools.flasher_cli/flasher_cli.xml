<?xml version="1.0" encoding="UTF-8"?>
<jonchki-artifact version="1.0">
	<info group="org.muhkuh.tools"
	      module="flasher"
	      artifact="flasher_cli"
	      version="${PROJECT_VERSION}"
	      vcs-id="${PROJECT_VERSION_VCS}"
	      extension="zip"/>
	<dependencies>
		<dependency group="org.muhkuh.tools" module="flasher" artifact="lua5.4-flasher" version="${PROJECT_VERSION}"/>
	</dependencies>
	<actions>
		<action name="finalizer" file="${prj_root}/jonchki/org.muhkuh.tools.flasher_cli/finalizer.lua"/>
		<action name="pack" path="${install_base}">
			local t = ...
			local tResult = true

			t:createPackageFile()
			t:createHashFile()
			t:createArchive('${prj_root}/targets/${default_archive_name}', 'native')

			return tResult
		</action>
	</actions>
</jonchki-artifact>
