<?xml version="1.0" encoding="UTF-8"?>
<jonchki-artifact version="1.0">
	<info group="org.muhkuh.tools"
	      module="flasher"
	      artifact="lua5.1-flasher"
	      version="${PROJECT_VERSION}"
	      vcs-id="${PROJECT_VERSION_VCS}"
	      extension="zip">
		<license name="GPL-2.0"/>
		<author name="Flasher team" url="https://github.com/muhkuh-sys/flasher" />
		<description>
			The flasher is an application for systems based on the Hilscher "netX" CPU. It writes data to flash or EEPROM chips.
		</description>
	</info>
	<dependencies>
<!-- 
Make sure that the flasher is built with the same module versions as version 1.8.1.
The module versions are from the jonchki report of version 1.8.1.
Start by defining the versions of the modules with no dependencies, including Lua.
Then add those that only depend on Lua.
Then add those that depend on Lua and the previously defined modules.
-->
<!-- no dependencies -->
<dependency group="org.openocd"              module="openocd"          artifact="openocd"                version="0.11.0.1"/>

<!-- no dependencies -->
<dependency group="org.lua"                  module="lua"              artifact="lua"                    version="5.1.5.9"/>

<!-- depends on Lua: -->
<dependency group="uk.co.matthewwild"        module="luaexpat"         artifact="lua5.1-luaexpat"        version="1.3.0.5"/>
<dependency group="org.muhkuh.lua"           module="archive"          artifact="lua5.1-archive"         version="0.0.2.2"/>
<dependency group="com.github.keplerproject" module="luafilesystem"    artifact="lua5.1-luafilesystem"   version="1.7.0.2.3"/>
<dependency group="com.github.tieske"        module="date"             artifact="date"                   version="2.2.1"/>
<dependency group="com.github.hoelzro"       module="lua-term"         artifact="lua5.1-lua-term"        version="0.7.4"/>
<dependency group="com.github.mpeterv"       module="argparse"         artifact="argparse"               version="0.6.0.2"/>
<dependency group="org.muhkuh.lua"           module="mhash"            artifact="lua5.1-mhash"           version="0.9.9.9.8"/>
<dependency group="org.luajit"               module="bitop"            artifact="lua5.1-bitop"           version="1.0.2.10"/>

<!-- depends on luafilesystem -->
<dependency group="com.github.stevedonovan"  module="penlight"         artifact="penlight"               version="1.6.0.1"/> 

<!-- depends on luaterm, date -->
<dependency group="com.github.moteus"        module="lua-log"          artifact="lua-log"                version="0.1.6.5"/> 

<dependency group="org.muhkuh.lua"           module="romloader"        artifact="lua5.1-romloader"       version="2.5.3.1"/>

<dependency group="org.muhkuh.tools"         module="muhkuh_base_cli"  artifact="lua5.1-muhkuh_base_cli" version="2.3.2"/>
	
	</dependencies>
</jonchki-artifact>
